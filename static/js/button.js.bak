$(document).ready(
    function()
    {
        $("#hide").click(
            function()
            {
                if ($("#hide").text() == "Expandir")
                {
                    $("#hide").text("Encolher");
                    $("#container").addClass("resp-container-xs")
                    $("#container").removeClass("resp-container-lg")
                }
                else
                {
                    $("#hide").text("Expandir");
                    $("#container").addClass("resp-container-lg")
                    $("#container").removeClass("resp-container-xs")
                }
            }
        );
    }
);
